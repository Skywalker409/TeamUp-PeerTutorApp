<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="xyz.tamutheo.databaseAPI.tutee.TuteeMapper">
    <resultMap id="TuteeResultMap" type="xyz.tamutheo.databaseAPI.tutee.TuteeModel">
        <result property="tuteeId" column="tutee_id" /> 
        <result property="uin" column="uin" /> 
        <result property="firstName" column="first_name" /> 
        <result property="lastName" column="last_name" /> 
        <result property="majorId" column="major_id" /> 
        <result property="seniorityId" column="seniority_id" /> 
        <result property="phoneNumber" column="phone_number" /> 
        <result property="email" column="email" /> 
    </resultMap>
    <select id="read" resultMap="TuteeResultMap">
        SELECT
        *
        FROM tutee
        <where>
            <if test="uin != null">
                uin = #{uin}
            </if>
        </where>
    </select>
    <insert id="create" parameterType="xyz.tamutheo.databaseAPI.tutee.TuteeModel">
        INSERT INTO tutee
            (uin, first_name, last_name, major_id, seniority_id, phone_number, email)
        VALUES
            (#{uin}, #{firstName}, #{lastName}, #{majorId}, #{seniorityId}, #{phoneNumber}, #{email})
    </insert>
    <update id="update" parameterType="map">
        UPDATE tutee
        SET
            uin = #{tuteeModelNew.uin},
            first_name = #{tuteeModelNew.firstName},
            last_name = #{tuteeModelNew.lastName},
            major_id = #{tuteeModelNew.majorId},
            seniority_id = #{tuteeModelNew.seniorityId},
            phone_number = #{tuteeModelNew.phoneNumber},
            email = #{tuteeModelNew.email}
        WHERE
            uin = #{tuteeModelOld.uin}
    </update>
</mapper>